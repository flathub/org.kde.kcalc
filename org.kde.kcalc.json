{
    "id": "org.kde.kcalc",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kcalc",
    "rename-icon": "accessories-calculator",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=wayland",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "mpfr",
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/share/doc/mpfr"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.mpfr.org/mpfr-4.0.2/mpfr-4.0.2.tar.xz",
                    "sha256": "1d3be708604eae0e42d578ba93b390c2a145f17743a744d8f3f8c2ad5855a38a"
                }
            ]
        },
        {
            "name": "kcalc",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 icons/${icon_size}-accessories-calculator.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/accessories-calculator.png; done"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/kcalc-20.08.2.tar.xz",
                    "sha256": "76b6c8e44c789090c0155f79878df8f27c96d2df4273443b0f05a42ec81902cf"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                },
                {
                    "type": "patch",
                    "path": "screenshots.patch"
                }
            ]
        }
    ]
}
